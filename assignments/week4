/* Element selector */
body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #f4f4f9;
  color: #333;
  margin: 0;
  padding: 0;
}

/* ID selector */
#main-header {
  background-color: #4a90e2;
  color: white;
  padding: 20px;
  text-align: center;
  border-bottom: 5px solid #357ab8;
}

/* Class selector */
.subtitle {
  font-size: 1.2em;
  margin-top: 10px;
  color: #e0e0e0;
}

/* Another class selector */
.content {
  margin: 30px;
  padding: 20px;
  background-color: #ffffff;
  border: 2px solid #ddd;
  border-radius: 8px;
}

/* Image styling */
.styled-image {
  width: 100%;
  max-width: 300px;
  border: 3px solid #4a90e2;
  border-radius: 10px;
  margin-top: 20px;
}
